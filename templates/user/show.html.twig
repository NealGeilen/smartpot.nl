{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block header %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Users</a></li>
            <li class="breadcrumb-item active" aria-current="page">User show</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-6">
                    <h1>Show user</h1>
                </div>
                <div class="col-6">
                    <div class="float-right">
                        <div class="btn-group">
                            <a class="btn btn-primary" href="{{ path('user_index') }}"><i class="fas fa-arrow-left"></i></a>
                            <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pen"></i></a>
                            {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body bg-gradient-primary rounded text-white">
            <table class="table table-light table-hover table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        <ul class="list-group">
                            {% for role in user.roles %}
                                <li class="list-group-item {% if role == "ROLE_ADMIN" %}bg-gradient-primary{% else %}bg-primary{% endif %} text-white" style="padding: 8px">{{ role }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
