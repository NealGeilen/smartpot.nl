{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block header %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Users</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body rounded bg-primary">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-light">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Roles</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>
                                <ul class="list-group">
                                    {% for role in user.roles %}
                                        <li class="list-group-item {% if role == "ROLE_ADMIN" %}bg-gradient-primary{% else %}bg-primary{% endif %} text-white" style="padding: 8px">{{ role }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pen"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
