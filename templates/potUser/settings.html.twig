{% extends 'base.html.twig' %}

{% block title %}Hello PotController!{% endblock %}
{% block header %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('pots') }}">My Plant's</a></li>
            <li class="breadcrumb-item active" aria-current="page">Settings: {{ Pot.name }}</li>
        </ol>
    </nav>

    <style>
        .col-1 {
            margin-top: 10px ;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card shadow plant-background plant-background-1">
        <div class="card-body card-plant-body">
            <h2>
                Pot settings
            </h2>
            {{ form(form) }}

            <button id="search" class="btn-primary btn" type="button">Zoek Foto</button>
        </div>
    </div>

    <div id="root">

    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/vendor/jquery-ui-1.12.1/jquery-ui.js') }}"></script>
    <script src="{{ asset('assets/js/autocomplete.js') }}"></script>
    <script src="{{ asset('assets/js/pexels.js') }}"></script>
{% endblock %}