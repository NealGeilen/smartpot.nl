{% extends 'login.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group mb-3">
        <div class="input-group input-group-merge input-group-alternative">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-single-02"></i></span>
            </div>
            <input class="form-control" value="{{ last_username }}" placeholder="Gebruikersnaam" name="username" id="inputUsername" type="text" required autofocus>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group input-group-merge input-group-alternative">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
            </div>
            <input class="form-control" placeholder="Wachtwoord" id="inputPassword" name="password" type="password" required>
        </div>
    </div>

    <div class="custom-control custom-control-alternative custom-checkbox">
        <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
        <label class="custom-control-label" for=" customCheckLogin">
            <span class="text-muted">Onthouden</span>
        </label>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="text-center">
        <button type="submit" class="btn btn-primary my-4">Inloggen</button>
    </div>
</form>
{% endblock %}
